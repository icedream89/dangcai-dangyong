{
  "name": "当才当用 - 政企服务平台",
  "image": "mcr.microsoft.com/devcontainers/java:0-17-jdk",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },

  "forwardPorts": [8080, 8081, 3000, 3306, 6379, 9000, 9001],

  "portsAttributes": {
    "8080": {
      "label": "后台管理API",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "小程序API",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "管理后台前端"
    },
    "9001": {
      "label": "MinIO控制台",
      "onAutoForward": "openPreview"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "vmware.vscode-boot-dev-pack",
        "gabrielbb.vscode-lombok",
        "vscjava.vscode-java-pack",
        "GitHub.copilot",
        "ms-vscode.live-server"
      ],
      "settings.json": {
        "java.server.launchMode": "Standard",
        "spring.boot.ls.checkJVM": false
      }
    }
  },

  "mounts": [
    "source=${localWorkspaceFolder}/.m2,target=/home/vscode/.m2,type=bind,consistency=cached"
  ],

  "remoteUser": "vscode"
}
