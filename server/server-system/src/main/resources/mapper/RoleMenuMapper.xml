<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dangcai.system.mapper.RoleMenuMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.dangcai.system.domain.RoleMenu">
        <id column="id" property="id"/>
        <result column="role_id" property="roleId"/>
        <result column="menu_id" property="menuId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 批量插入角色菜单关联 -->
    <insert id="insertBatch" parameterType="java.util.List">
        INSERT INTO sys_role_menu (role_id, menu_id, create_time)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId}, #{item.menuId}, NOW())
        </foreach>
    </insert>

    <!-- 根据角色ID删除菜单关联 -->
    <delete id="deleteByRoleId" parameterType="java.lang.Long">
        DELETE FROM sys_role_menu
        WHERE role_id = #{roleId}
    </delete>

    <!-- 根据菜单ID删除角色关联 -->
    <delete id="deleteByMenuId" parameterType="java.lang.Long">
        DELETE FROM sys_role_menu
        WHERE menu_id = #{menuId}
    </delete>

    <!-- 根据角色ID查询菜单ID列表 -->
    <select id="selectMenuIdsByRoleId" parameterType="java.lang.Long" resultType="java.lang.Long">
        SELECT menu_id
        FROM sys_role_menu
        WHERE role_id = #{roleId}
    </select>

</mapper>
